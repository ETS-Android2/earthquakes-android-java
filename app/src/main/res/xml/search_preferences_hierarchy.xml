<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:title="@string/activity_search_preferences_label">

    <PreferenceCategory
        app:key="notifications_category"
        app:title="Magnitudes">

        <EditTextPreference
            android:defaultValue="@string/search_preferences_minimum_magnitude_default_value"
            android:key="@string/search_preferences_minimum_magnitude_key"
            android:selectAllOnFocus="true"
            android:title="@string/search_preferences_minimum_magnitude_title" />

        <EditTextPreference
            android:defaultValue="@string/search_preferences_maximum_magnitude_default_value"
            android:inputType="numberDecimal"
            android:key="@string/search_preferences_maximum_magnitude_key"
            android:selectAllOnFocus="true"
            android:title="@string/search_preferences_maximum_magnitude_title" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="notifications_category"
        app:title="Time">

        <ListPreference
            android:defaultValue="@string/settings_date_period_default"
            android:entries="@array/settings_date_period_labels"
            android:entryValues="@array/settings_date_period_values"
            android:key="@string/settings_date_period_key"
            android:title="@string/settings_date_period_label" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="notifications_category"
        app:title="Filters">

        <EditTextPreference
            android:defaultValue="@string/settings_limit_default"
            android:inputType="numberDecimal"
            android:key="@string/settings_limit_key"
            android:selectAllOnFocus="true"
            android:title="@string/settings_limit_label" />

        <ListPreference
            android:defaultValue="@string/settings_order_by_default"
            android:entries="@array/settings_order_by_labels"
            android:entryValues="@array/settings_order_by_values"
            android:key="@string/settings_order_by_key"
            android:title="@string/settings_order_by_label" />

        <EditTextPreference
            android:defaultValue="@string/settings_filter_by_default"
            android:inputType="text"
            android:key="@string/settings_filter_by_key"
            android:selectAllOnFocus="true"
            android:title="@string/settings_filter_by_label" />

    </PreferenceCategory>

</PreferenceScreen>