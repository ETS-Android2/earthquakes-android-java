<?xml version="1.0" encoding="utf-8"?>

<!-- Background circle for the magnitude value -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval" >

    <gradient
        android:centerX=".6"
        android:centerY=".40"
        android:endColor="@color/colorBackGroundActionMode"
        android:gradientRadius="20"
        android:startColor="@color/colorBackGroundActionMode"
        android:type="radial" />

    <stroke
        android:width="1dp"
        android:color="@color/colorBackGroundActionMode" />

    <size
        android:height="20dp"
        android:width="20dp" />

</shape>