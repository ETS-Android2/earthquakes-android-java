<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_background_corner_radius" />
            <stroke android:width="@dimen/button_background_stroke_width" android:color="@color/colorPrimary" />
            <gradient android:angle="-90" android:endColor="@color/medium_light_brown" android:startColor="@color/light_brown" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_background_corner_radius" />
            <stroke android:width="@dimen/button_background_stroke_width" android:color="@color/colorPrimary" />
            <solid android:color="@color/medium_light_brown" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_background_corner_radius" />
            <stroke android:width="@dimen/button_background_stroke_width" android:color="@color/colorPrimary" />
        </shape>
    </item>
</selector>