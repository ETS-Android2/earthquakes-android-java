    <!-- *************** MAGNITUDE COLORS AND BACKGROUNDS COLORS ********************** -->
    <!-- MAGNITUDE COLORS, used on the borders of the magnitude circle, and the earthquake
    information texts. -->
    <!-- BACKGROUND COLORS, used on the background of the magnitude circle.  -->

    <!-- Magnitude color and background color for an earthquake with magnitude between 0 and 0.9 -->
    <color name="magnitude0">#03A9F4</color>   <!-- (Light Blue 500) -->
    <color name="background0">#E1F5FE</color>  <!-- (Light Blue 50) -->

    <!-- Magnitude color and background color for an earthquake with magnitude between 1 and 1.9 -->
    <color name="magnitude1">#039BE5</color>   <!-- (Light Blue 600)-->
    <color name="background1">#B3E5FC</color>   <!-- (Light Blue 100)-->

    <!-- Magnitude color and background color for an earthquake with magnitude between 2 and 2.9 -->
    <color name="magnitude2">#0288D1</color>   <!-- (Light Blue 700)-->
    <color name="background2">#81D4FA</color>   <!-- (Light Blue 200)-->

    <!-- Magnitude color and background color for an earthquake with magnitude between 3 and 3.9 -->
    <color name="magnitude3">#1976D2</color>   <!-- (Blue 700)-->
    <color name="background3">#90CAF9</color>   <!-- (Blue 200)-->

    <!-- Magnitude color and background color for an earthquake with magnitude between 4 and 4.9 -->
    <color name="magnitude4">#388E3C</color>  <!-- (Green 700)-->
    <color name="background4">#A5D6A7</color>  <!-- (Green 200)-->

    <!-- Magnitude color and background color for an earthquake with magnitude between 5 and 5.9 -->
    <color name="magnitude5">#F57C00</color>  <!-- (Orange 700) -->
    <color name="background5">#FFCC80</color>  <!-- (Orange 200) -->


    <!-- Magnitude color and background color for an earthquake with magnitude between 6 and 6.9 -->
    <color name="magnitude6">#E65100</color>  <!-- (Orange 900) -->
    <color name="background6">#FFB74D</color>  <!-- (Orange 300) -->

    <!-- Magnitude color and background color for an earthquake with magnitude between 7 and 7.9 -->
    <color name="magnitude7">#F44336</color>  <!-- (Red 500) -->
    <color name="background7">#FFCDD2</color>  <!-- (Red 100) -->


    <!-- Magnitude color and background color for an earthquake with magnitude between 8 and 8.9 -->
    <color name="magnitude8">#D32F2F</color>  <!-- (Red 700) -->
    <color name="background8">#EF9A9A</color>  <!-- (Red 200) -->

    <!-- Magnitude color and background color for an earthquake with magnitude over 9 -->
    <color name="magnitude9plus">#B71C1C</color>  <!-- Red 900 -->
    <color name="background9plus">#E57373</color>  <!-- Red 300 -->

    <!-- ALERT COLORS -->

    <color name="colorAlertGreen">#43A047</color>       <!-- Green 600  -->
