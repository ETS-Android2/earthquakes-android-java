<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_earthquake_details_primary_details_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/application_standard_margin"
    android:baselineAligned="false">

    <FrameLayout
        android:id="@+id/activity_earthquake_details_magnitude_frame_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="?android:attr/selectableItemBackground">

        <View
            android:id="@+id/activity_earthquake_details_magnitude_circle_view"
            android:layout_width="@dimen/activity_earthquake_details_magnitude_text_view_size"
            android:layout_height="@dimen/activity_earthquake_details_magnitude_text_view_size"
            android:background="@drawable/magnitude_circle" />

        <TextView
            android:id="@+id/activity_earthquake_details_magnitude_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textSize="@dimen/application_standard_text_size"
            android:textStyle="bold"
            tools:text="8.9" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/application_standard_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_earthquake_details_location_offset_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:textSize="@dimen/application_small_text_size"
            android:textStyle="italic"
            tools:text="88km N of" />

        <TextView
            android:id="@+id/activity_earthquake_details_location_primary_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:textSize="@dimen/application_standard_text_size"
            android:textStyle="bold"
            tools:text="San Francisco, California" />

        <TextView
            android:id="@+id/activity_earthquake_details_distance_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/application_small_text_size"
            android:textStyle="italic"
            tools:text="10 km from you" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_earthquake_details_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textSize="@dimen/application_small_text_size"
            android:textStyle="italic"
            tools:text="Feb 2, 2016" />

        <TextView
            android:id="@+id/activity_earthquake_details_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textSize="@dimen/application_small_text_size"
            android:textStyle="italic"
            tools:text="3:00 PM" />

    </LinearLayout>

</LinearLayout>