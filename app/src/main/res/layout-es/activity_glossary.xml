<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/test"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:padding="@dimen/application_small_padding">

        <LinearLayout
            android:id="@+id/activity_glossary_magnitude_title_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:id="@+id/activity_glossary_magnitude_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/application_small_padding"
                android:text="@string/activity_glossary_magnitude_title"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/application_standard_text_size"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/activity_glossary_magnitude_title_arrow_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/activity_glossary_arrow_image_view_content_description"
                app:srcCompat="@drawable/ic_keyboard_arrow_down_brown_24dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/activity_glossary_magnitude_definition_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/application_small_padding"
            android:text="@string/activity_glossary_magnitude_definition"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/application_standard_text_size"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/activity_glossary_richter_title_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:id="@+id/activity_glossary_richter_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/application_small_padding"
                android:text="@string/activity_glossary_richter_title"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/application_standard_text_size"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/activity_glossary_richter_title_arrow_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/activity_glossary_arrow_image_view_content_description"
                app:srcCompat="@drawable/ic_keyboard_arrow_down_brown_24dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/activity_glossary_richter_definition_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/application_small_padding"
            android:text="@string/activity_glossary_richter_definition"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/application_standard_text_size"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/activity_glossary_intensity_title_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:id="@+id/activity_glossary_intensity_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/application_small_padding"
                android:text="@string/activity_glossary_intensity_title"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/application_standard_text_size"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/activity_glossary_intensity_title_arrow_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/activity_glossary_arrow_image_view_content_description"
                app:srcCompat="@drawable/ic_keyboard_arrow_down_brown_24dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/activity_glossary_intensity_definition_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/application_small_padding"
            android:text="@string/activity_glossary_intensity_definition"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/application_standard_text_size"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/activity_glossary_mercalli_title_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:id="@+id/activity_glossary_mercalli_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/application_small_padding"
                android:text="@string/activity_glossary_mercalli_title"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/application_standard_text_size"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/activity_glossary_mercalli_title_arrow_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/activity_glossary_arrow_image_view_content_description"
                app:srcCompat="@drawable/ic_keyboard_arrow_down_brown_24dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/activity_glossary_mercalli_definition_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/application_small_padding"
            android:text="@string/activity_glossary_mercalli_definition"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/application_standard_text_size"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/activity_glossary_tsunami_title_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:id="@+id/activity_glossary_tsunami_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/application_small_padding"
                android:text="@string/activity_glossary_tsunami_title"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/application_standard_text_size"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/activity_glossary_tsunami_title_arrow_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/activity_glossary_arrow_image_view_content_description"
                app:srcCompat="@drawable/ic_keyboard_arrow_down_brown_24dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/activity_glossary_tsunami_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/application_small_padding"
            android:text="@string/activity_glossary_tsunami_definition"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/application_standard_text_size"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>